[global]
; Values: alert, error, warning, notice, debug
log_level = notice
error_log = /dev/stderr
daemonize = no

[www]
listen = 0.0.0.0:9000
user = www-data
group = www-data

clear_env = no
catch_workers_output = yes
decorate_workers_output = no

pm = dynamic
pm.max_children = 5
pm.start_servers = 3
pm.min_spare_servers = 2
pm.max_spare_servers = 4
pm.max_requests = 200

ping.path = /ping
pm.status_path = /status
