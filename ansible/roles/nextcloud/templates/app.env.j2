NEXTCLOUD_ADMIN_USER='{{ nextcloud_admin_username }}'
NEXTCLOUD_ADMIN_PASSWORD='{{ nextcloud_admin_password }}'
NEXTCLOUD_TRUSTED_DOMAINS='{{ nextcloud_domain }} {{ nextcloud_docs_domain }}'
NEXTCLOUD_DATA_DIR='/data'
NEXTCLOUD_LOG_FILE='/data/nextcloud.log'
NEXTCLOUD_LOG_LEVEL='{{ nextcloud_app_log_levels[nextcloud_app_log_level] }}'

# General
NEXTCLOUD_LOCALE='en'
NEXTCLOUD_PHONE_REGION='CH'

# Proxy
OVERWRITEHOST='{{ nextcloud_domain | mandatory }}'
OVERWRITEPROTOCOL='https'

{% if nextcloud_smtp_enabled %}
# Email
SMTP_HOST='{{ nextcloud_smtp_host | mandatory }}'
SMTP_PORT='{{ nextcloud_smtp_port | mandatory }}'
SMTP_NAME='{{ nextcloud_smtp_user | mandatory }}'
SMTP_PASSWORD='{{ nextcloud_smtp_pass | mandatory }}'
SMTP_SECURE='{{ nextcloud_smtp_method | mandatory }}'
MAIL_FROM_ADDRESS='{{ nextcloud_smtp_from | mandatory }}'
MAIL_DOMAIN='{{ nextcloud_smtp_domain | mandatory }}'

{% endif %}
# DB
POSTGRES_HOST='db'
POSTGRES_DB='{{ nextcloud_db_name }}'
POSTGRES_USER='{{ nextcloud_db_user }}'
POSTGRES_PASSWORD='{{ nextcloud_db_pass }}'

# Cache
REDIS_HOST='cache'
REDIS_HOST_PORT='{{ nextcloud_cache_cont_port | mandatory }}'
REDIS_HOST_PASSWORD='{{ nextcloud_cache_pass | mandatory }}'
